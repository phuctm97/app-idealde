<UserControl x:Class="Idealde.Modules.CodeEditor.Views.CodeEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:scintilla="clr-namespace:ScintillaNET;assembly=ScintillaNET"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Loaded="ScintillaInitialize"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <WindowsFormsHost>
            <scintilla:Scintilla x:Name="ScintillaEditor" ScrollWidth="100" TextChanged="OnTextChanged"></scintilla:Scintilla>
        </WindowsFormsHost>
    </Grid>
</UserControl>